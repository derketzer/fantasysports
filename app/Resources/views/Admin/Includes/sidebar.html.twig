            {% if is_granted('ROLE_ADMIN') %}
                <li class="{% if app.request.attributes.get('_route') in newsRoutes %}active open{% endif %}">
                    <span title="General">
                        <i class="icon-newspaper"></i>
                        <span class="nav-title">Noticias</span>
                    </span>

                    <ul class="inner-nav">
                        <li class="{% if app.request.attributes.get('_route') == 'fantasy_sports_admin_news_list' %}active{% endif %}">
                            <a href="{{ path('fantasy_sports_admin_news_list') }}">
                                <i class="icol-book-open"></i> Todos
                            </a>
                        </li>
                    </ul>
                </li>
            {% endif %}

            {% if is_granted('ROLE_ADMIN') %}
                <li class="{% if app.request.attributes.get('_route') in userRoutes %}active open{% endif %}">
                    <span title="General">
                        <i class="icon-user"></i>
                        <span class="nav-title">Usuarios</span>
                    </span>

                    <ul class="inner-nav">
                        <li class="{% if app.request.attributes.get('_route') == 'fantasy_sports_admin_user_list' %}active{% endif %}">
                            <a href="{{ path('fantasy_sports_admin_user_list') }}">
                                <i class="icol-book-open"></i> Todos
                            </a>
                        </li>
                    </ul>
                </li>
            {% endif %}
        </ul>
    </nav>
</aside>